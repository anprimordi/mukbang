<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.materials.prism.PrismSecondFragment">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_instruction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{viewModelThird.question}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:maxLines="3"
                    tools:text="@tools:sample/lorem/random" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_prism_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="80dp"
                    android:foregroundTint="@android:color/transparent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/guide1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_instruction"
                    app:strokeColor="@color/stroke_color"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Soal"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_question_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_third_key_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.keyOne}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="key A" />


                        <ImageView
                            android:id="@+id/image_question_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_third_key_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.keyTwo}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="key C" />

                        <ImageView
                            android:id="@+id/image_question_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_third_key_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.keyThree}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="key D" />

                        <ImageView
                            android:id="@+id/image_question_four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_third_key_four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.keyFour}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="key E" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_prism_answer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:foregroundTint="@android:color/transparent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/card_prism_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guide1"
                    app:layout_constraintTop_toBottomOf="@id/text_instruction"
                    app:strokeColor="@color/stroke_color"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pilihan"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_third_answer_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.answerOne}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="answer A" />

                        <TextView
                            android:id="@+id/text_third_answer_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.answerTwo}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="answer B" />

                        <TextView
                            android:id="@+id/text_third_answer_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.answerThree}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="answer C" />

                        <TextView
                            android:id="@+id/text_third_answer_four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/container_drop_key"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@{viewModelThird.answerFour}"
                            android:textAlignment="center"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="answer D" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>